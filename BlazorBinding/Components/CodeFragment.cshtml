@using BlazorBinding.Services
<pre><code>@ColorisedContent)</code></pre>
@functions
{
  [Parameter] protected string[] Content { get; set; }
  [Parameter] protected string Language { get; set; }
  [Inject] ICodeHighlighter codeHighlighter { get; set; }
  MarkupString ColorisedContent
  {
      get {
          if (Language.Equals("csharp", StringComparison.OrdinalIgnoreCase))
          {
              return (MarkupString)string.Join("\n", Content.Select(c => codeHighlighter.HighlightCSharp(c)));
          } else {
              return (MarkupString)string.Join("\n", Content.Select(c => codeHighlighter.HighlightHtml(c)));
          }
      }
  }
}